# # 1D Example
# PDE{
#     dim = 1
#     n   = 128
# }

# # 2D Example
# PDE{
#     dim   = 2
#     n     = 32
#     eps   = 1e-2
#     theta = 0.523598775 # 30 degrees
# }

# 3D Example
PDE{
    dim  = 3
    n    = 32
    epsy = 1e-2
    epsz = 1e-1
}

LinearSolver{
    name = "CGSolver"
    uses_preconditioner = TRUE
    absolute_tolerance  = 1.0e-12
    relative_tolerance  = 1.0e-12
    max_iterations      = 30
    print_info_level    = 2

    Preconditioner{
        name = "BoomerAMGSolver"
        print_info_level   = 0
        min_coarse_size    = 5
        relax_type         = 6 // Hybrid GS/Jacobi
        coarsen_type       = 10
        interp_type        = 17 // distance-two
        cycle_type         = 1
        relax_order        = 0
        strong_threshold   = 0.5
        absolute_tolerance = 0.0
        relative_tolerance = 0.0
        max_iterations     = 1
    }
}